<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_marginRight="8dp"
    android:padding="4dp">


    <LinearLayout
        android:layout_width="250dp"
        android:orientation="vertical"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="#E0E0E0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_title"
            android:layout_margin="8dp"
            android:text="title"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_price"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:text="price"
            android:textAllCaps="true"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_height="wrap_content"
            android:id="@+id/item_description"
            android:layout_marginLeft="8dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ultricies justo non neque eleifend luctus. Donec feugiat nunc sit amet lacus egestas"
            android:textAllCaps="true"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="45sp"
            android:layout_margin="8dp"
            android:layout_height="45sp"
            android:gravity="center"
            android:text="Ð¶"
            android:textAllCaps="true"
            android:id="@+id/item_remove_button"
            android:textColor="#00ff0000"
            android:textSize="34sp"
            android:background="#555" />

    </LinearLayout>

</RelativeLayout>