<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_layout"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/container_special_scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#BDBDBD">

            <TextView
                android:id="@+id/container_delete"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="swipe further to delete"
                android:layout_height="@dimen/recycler_height"
                android:background="@drawable/delete_transistion"
                android:orientation="vertical" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/recycler_height"
                android:background="#E0E0E0"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginRight="2dp">

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="title"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:text="price"
                    android:textAllCaps="true"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="bottom"
                    android:text="description"
                    android:textAllCaps="true"
                    android:textSize="12sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/container_edit"
                android:layout_width="match_parent"
                android:text="swipe further to edit"
                android:gravity="center"
                android:layout_height="@dimen/recycler_height"
                android:background="@drawable/edit_transistion"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>